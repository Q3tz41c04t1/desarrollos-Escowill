<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_view_form" model="ir.ui.view">
            <field name="name">sale.order.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                    <field name="total_packages" string="Total Packages"/>
                    <field name="customer_key" string="Customer key"/>
                    <field name="has_pending_done" invisible="1"/>
                </xpath>

                <!-- Added Field Customer Purchase Order in Sale Order -->
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="customer_po" string="Customer purchase order"/>
                </xpath>

                <!-- Added Field Customer Key in sale order line tree view -->
                <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                    <field name="customer_key" string="Customer key"/>
                </xpath>

                <!-- Added Field More information in sale order -->
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="more_info" string="More information"/>
                </xpath>

                <!-- Added Field to check is stock product or not -->
                <xpath expr="//field[@name='validity_date']" position="before">
                    <field name="is_stock_product" string='Es pedido de Stock?' attrs="{'readonly': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>