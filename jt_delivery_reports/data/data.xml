<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Server Action to set scheduled date as a date field to transfer orders based on scheduled datetime field -->
        <record id="action_server_set_scheduled_date" model="ir.actions.server">
            <field name="name">Set Scheduled Date</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="state">code</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="code">
                if records:
                    action = records.set_scheduled_date()
            </field>
        </record>

        <record id="action_server_set_create_date_to_sale" model="ir.actions.server">
            <field name="name">Set Create Date</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="code">
                if records:
                    action = records.set_create_date()
            </field>
        </record>
    </data>
</odoo>
