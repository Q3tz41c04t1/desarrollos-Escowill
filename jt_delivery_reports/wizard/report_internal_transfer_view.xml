<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tran_rep_wiz_view_form" model="ir.ui.view">
            <field name="name">tran.rep.wiz.view.form</field>
            <field name="model">tran.rep.wiz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <center> 
                            <field name="state" invisible="1"/>
                            <group states="choose">
                                <group>
                                    <field name="source_warehouse_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" />
                                </group>
                                <group>
                                    <field name="dest_warehouse_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" />
                                </group>
                                <group>
                                    <field name="date" string ="Fecha del movimiento:" />
                                </group>

                            </group>
                            <button class="btn btn-sm btn-primary" string="BUSCAR" name="fill_move_lines" type="object" attrs="{'invisible': ['|', ('source_warehouse_id', '=', False), '|', ('dest_warehouse_id', '=', False), '|', ('date', '=', False), ('state', '=', 'get')]}"/>
                            <group states="choose">
                                <label for="all_select" string="Select/Deselect All Lines" attrs="{'invisible': [('move_ids', '=', False)]}"/>
                                <field name="all_select" nolabel="1" attrs="{'invisible': [('move_ids', '=', False)]}"/>
                            </group>
                            <group states="choose">
                                <field nolabel="1" name="move_ids" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" >
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="wiz_id" invisible="1"/>
                                        <field name="move_id" invisible="1"/>
                                        <field name="picking_id" invisible="1"/>
                                        <field name="to_print"/>
                                        <field name="reference"/>
                                        <field name="product_id"/>
                                        <field name="location_id"/>
                                        <field name="location_dest_id"/>
                                        <field name="partner_id"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                            </group>
                            <group states="get">
                                <field name="name" colspan="4" invisible="1"/>
                                <field name="report" filename="name" colspan="4"/>
                            </group>
                        </center>
                    </sheet>
                    <footer>
                        <center>
                            <button name="generate_int_report" type="object" states="choose" class=" btn btn-primary button_pdf">IIMPRIMIR</button> &#160; &#160;
                            <button class="button_close btn oe_link oe_highlight" special="cancel">CANCELAR</button>
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_internal_transfer_report">
            <field name="name">Internal Transfer Report</field>
            <field name="res_model">tran.rep.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
